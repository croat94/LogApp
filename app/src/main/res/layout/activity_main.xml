<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#212121">

    <Button
        android:textColor="#ffffff"
        android:background="@drawable/button"
        android:id="@+id/buttonPocni"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginTop="38dp"
        android:text="@string/pregled_ocitanja"
        android:onClick="onButtonClickPregled"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:textColor="#ffffff"
        android:background="@drawable/button"
        android:id="@+id/buttonNovo"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:text="@string/novo"
        android:onClick="onButtonClickNovo"
        android:layout_below="@+id/buttonPocni"
        android:layout_centerHorizontal="true" />

    <Button
        android:background="@drawable/fab"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/sync_button"
        android:id="@+id/buttonSync"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onButtonClickSync"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <Button
        android:background="@drawable/fab"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="DELETE"
        android:id="@+id/buttonDelete"
        android:onClick="onButtonClickDelete"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
